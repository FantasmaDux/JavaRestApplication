FROM openjdk:21

# Рабочая директория внутри самого образа
WORKDIR /app

# Переменная среды ${}
ARG APP_JAR=*.jar

# Что кладем и куда (справа название образа)
COPY ${APP_JAR} application.jar

# На каком порту будет подниматься приложение. Извне к этим узлам не достучаться.
#EXPOSE

# В качестве аргументов массив строк (консольных ключевых команд, только исполняемые)
ENTRYPOINT ["java", "-jar", "application.jar"]

EXPOSE 8080